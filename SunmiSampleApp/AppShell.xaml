<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SunmiSampleApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:SunmiSampleApp.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="SunmiSampleApp">

    <TabBar>
        <ShellContent Title="Main"
                      ContentTemplate="{DataTemplate views:MainPage}" />
        <ShellContent Title="Settings"
                          ContentTemplate="{DataTemplate views:SettingsPage}" />
        <ShellContent Title="Printer Info"
                          ContentTemplate="{DataTemplate views:PrinterInfoPage}"/>
        <ShellContent Title="Barcode"
                      ContentTemplate="{DataTemplate views:BarcodePage}" />

        <ShellContent Title="QRCode"
                      ContentTemplate="{DataTemplate views:QrcodePage}" />

        <ShellContent Title="Text"
                      ContentTemplate="{DataTemplate views:TextPage}" />

        <ShellContent Title="Table"
                      ContentTemplate="{DataTemplate views:TablePage}" />

    </TabBar>

</Shell>

